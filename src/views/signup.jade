extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
    
block body
  #wrapper
  .centered
    h1(class="maintitle") Die, Buddy
    section#signup
      form#signupForm(class="mainForm", name="signupForm", action="/signup", method="POST")
        .loginsect
          label(for="username") Username
          input#user(type="text", name="username", placeholder="username")
        .loginsect 
          label(for="pass") Password
          input#pass(type="password", name="pass", placeholder="password")
        .loginsect 
          label(for="pass2") Password
          input#pass2(type="password", name="pass2", placeholder="retype password")
        input(type="hidden", name="_csrf", value="#{csrfToken}")
        .loginButtons
          button.btn#signupSubmit Sign up
          a(class="altFormSubmit", href="/login") Have an account? Click here to log in
    
block scripts
        script(src="/assets/login.js")